<h1>Viewing <%= @customer.name %>'s Invoices</h1>

<%= link_to 'Back to Customers', customers_path %>

<table border="1">
  <thead>
    <tr>
      <th>Invoice Id</th>
      <th>Date</th>
      <th>Address</th>
      <th>City</th>
      <th>State</th>
      <th>Country</th>
      <th>Postal Code</th>
      <th>Total Cost</th>
    </tr>
  </thead>
  <tbody>
    <% @invoices.each do |i| %>
      <tr>
        <td><%= i.InvoiceId %></td>
        <td><%= i.InvoiceDate %></td>
        <td><%= i.BillingAddress %></td>
        <td><%= i.BillingCity %></td>
        <td><%= i.BillingState %></td>
        <td><%= i.BillingCountry %></td>
        <td><%= i.BillingPostalCode %></td>
        <td><%= i.Total %></td>
      </tr>
    <% end %>
  </tbody>
</table>